<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="acg_authority">
	<resultMap id="authMap" type="authority">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="display_name" property="displayName" jdbcType="VARCHAR" />
	</resultMap>

	<select id="page" resultType="authority" parameterType="page">
		SELECT
		id, display_name as displayName, name
		FROM
		acg_authority LIMIT
		#{pageStart},
		#{limit}
	</select>

	<select id="count" resultType="java.lang.Integer">
		select count(id) from acg_authority
		<if test="filters != null">
			where
			<if test="filters.name != null">
				name = #{filters.name}
			</if>
		</if>
	</select>
	
</mapper>