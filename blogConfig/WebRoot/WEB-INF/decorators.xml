<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/WEB-INF/Pages">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/common/*</pattern>
		<pattern>/css/*</pattern>
		<pattern>/images/*</pattern>
		<pattern>/js/*</pattern>
		<pattern>/js_debug/*</pattern>
	</excludes>

	<decorator name="main" page="main.ftl">
		<pattern>/manage/*</pattern>
	</decorator>
	
	<decorator name="header" page="header.ftl" />
	<decorator name="left" page="left.ftl" />
	<decorator name="footer" page="footer.ftl" />
</decorators>