#set($layout="/layout/layout.vm")
<form enctype="multipart/form-data" action="/data/save_test_email_template" method="post" id="task_form">
    <fieldset class="module aligned ">

        <div class="form-row field-id">
            <div>
                <label for="id_id">测试地址:</label>
                <textarea class="vBigIntegerField" id="id_id" name="email"
                          style="margin: 2px 0px; width: 660px; height: 353px;"></textarea>
            </div>
        </div>

        <div class="submit-row" style="float: left">
            <input type="submit" value="保存" class="default" name="_save">
        </div>

        <input type="hidden" name="edmEmailTemplateId" value="$!{id}">

    </fieldset>
</form>